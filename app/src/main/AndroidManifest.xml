<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.guest.barbelith">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.CategoriesActivity" />
        <activity
            android:name=".ui.CategoryActivity"
            android:theme="@style/AppTheme" />
        <activity android:name=".ui.NewTopicActivity"
            android:noHistory="true"/>
        <activity android:name=".ui.TopicDetailActivity"
            android:parentActivityName="com.example.guest.barbelith.ui.CategoryActivity"/>
        <activity android:name=".ui.NewPostActivity"
            android:noHistory="true"/>
        <activity android:name=".ui.LoginActivity"
            android:noHistory="true"></activity>
    </application>

</manifest>